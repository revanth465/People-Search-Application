@using PeopleSearch.CustomHtmlHellper;
@using PeopleSearch.Models
@model List<PeopleSearch.Models.Person>
@{
    ViewBag.Title = "Details";
}
<h2>Search results:</h2>
<div>
    <hr />
    @foreach (var person in Model)
    {
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => person.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(model => person.FirstName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => person.LastName)
            </dt>
            <dd>
                @Html.DisplayFor(model => person.LastName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => person.Address)
            </dt>
            <dd>
                @Html.DisplayFor(model => person.Address)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => person.Age)
            </dt>
            <dd>
                @Html.DisplayFor(model => person.Age)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => person.Interests)
            </dt>
            <dd>
                @Html.DisplayFor(model => person.Interests)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => person.Picture)
            </dt>
            <dd>
                <div class="display-field">
                    @Html.Image(@person.Picture, @person.AlternateText)
                </div>
            </dd>
        </dl>
    }

   
</div>